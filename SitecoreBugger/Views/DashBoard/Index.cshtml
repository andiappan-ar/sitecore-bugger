@model MasterData


@{
    Layout = "~/Views/Layout/_Account.cshtml";
}

<link href="~/Content/Styles/sc-bugger-dashboard.css" rel="stylesheet" />

<div class="wrapper">
    <!-- Sidebar  http://notepad.pw/agatanu-bugger -->
